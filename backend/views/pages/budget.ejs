<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Budget Management</title>
  <link rel="stylesheet" href="/css/budget.css">
</head>

<body>
  <!-- Navbar -->
  <div class="sticky_nav">
    <div class="logo">
      <img src="/image/logo.png" alt="Logo">
      <h2>Spendsmart</h2>
    </div>
    <div class="nav">
      <a href="/">Home</a>
      <a href="/features">Features</a>
      <a href="/showBudget">View Budgets</a>
    </div>
    <button class="sign-up">Sign Up</button>
  </div>

  <!-- Main Content -->
  <div class="container">
    <h1>Manage Your Budget</h1>

    <!-- Form to create or update budget -->
    <form action="/addBudget" method="POST">
      <div class="form-row">
        <div class="form-item">
          <label for="category">Category:</label>
          <input type="text" id="category" name="category" required>
        </div>
        <div class="form-item">
          <label for="budgetAmount">Budget Amount:</label>
          <input type="number" id="budgetAmount" name="budgetAmount" required>
        </div>
      </div>

      <div class="form-row">
        <div class="form-item">
          <label for="period">Select Period:</label>
          <select id="period" name="period" required>
            <option value="monthly">Monthly</option>
            <option value="yearly">Yearly</option>
          </select>
        </div>
        <div class="form-item">
          <label for="priority">Priority Level:</label>
          <select id="priority" name="priority" required>
            <option value="high">High</option>
            <option value="medium">Medium</option>
            <option value="low">Low</option>
          </select>
        </div>
      </div>

      <div class="form-item">
        <label for="notes">Notes:</label>
        <textarea id="notes" name="notes"></textarea>
      </div>

      <button type="submit">Set Budget</button>
    </form>
  </div>

  <!-- Footer -->
  <div class="footer">
    <div class="footer-column">
      <h3>Company</h3>
      <ul>
        <li><a href="#">About</a></li>
        <li><a href="#">Careers</a></li>
        <li><a href="#">Contact</a></li>
      </ul>
    </div>
    <div class="footer-column">
      <h3>Services</h3>
      <ul>
        <li><a href="#">Expense Tracking</a></li>
        <li><a href="#">Reports</a></li>
        <li><a href="#">Budgeting</a></li>
      </ul>
    </div>
    <div class="footer-column">
      <h3>Support</h3>
      <ul>
        <li><a href="#">Help Center</a></li>
        <li><a href="#">FAQs</a></li>
        <li><a href="#">Contact Support</a></li>
      </ul>
    </div>
  </div>
</body>

</html>
